{
  "name": "qencode-poc",
  "version": "1.0.0",
  "description": "Browser upload initiated encoding with Qencode",
  "main": "script.js",
  "scripts": {
    "test": "eslint ."
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^6.8.0"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "tus.js",
      "*.min.js"
    ],
    "parserOptions": {
      "ecmaVersion": 2019
    },
    "globals": {
      "tus": false
    },
    "env": {
      "browser": true,
      "es2017": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "prefer-arrow-callback": "error",
      "indent": [
        "error",
        2,
        {
          "MemberExpression": 0
        }
      ]
    }
  }
}
